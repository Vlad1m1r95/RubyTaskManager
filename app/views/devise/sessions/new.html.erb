

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="text-center mb-4">
      <h1 class="h3 mb-3 font-weight-normal">Log in</h1>
    </div> 
  <div class="form-label-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email" %>
  </div>

  <div class="form-label-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-label-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block"%>
      
  </div>
   <h1 class="h6 mb-3 font-weight-light"><%= render "devise/shared/links" %></h1>
<% end %>


