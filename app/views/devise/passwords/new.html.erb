

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="text-center mb-4">
      <h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>
    </div> 
  <div class="form-label-group">
    <%= f.label :email %><br />
    <%= f.email_field :email,  class:"form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"btn btn-lg btn-primary btn-block" %>
  </div>
  <h1 class="h6 mb-3 font-weight-light"><%= render "devise/shared/links" %></h1>
<% end %>


