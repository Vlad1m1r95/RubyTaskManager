
<%= render('template/header') %>

     
<%= form_for :task, url: tasks_path do  |f| %>
<div class="text-center mb-4 form-center">
      <h1 class="h3 mb-3 font-weight-normal">Добавление новой задачи</h1>
   

 
  <div class="form-label-group">
    <%= f.label :subject %><br />
    <%= f.text_field :subject, class:"form-control" %>
  </div>
  

 
  <div class="form-label-group">
    <%= f.label :description %><br />
    <%= f.text_area :description , class:"form-control" %>
  </div>
 <div class="form-label-group">
    <%= f.label :assignee %><br />
    <%= select("assignee", "user_id", User.all.collect { |p| [ p.name, p.id ] }, { include_blank: 'None' })  %>
  </div>
  
  <div class="form-label-group">
    <%= f.label :status %><br />
    <%= f.select :status, options_for_select([["To Do", "To Do"], "In Progress", "In Review", "Done"]) %>
  </div>
  


<div class="actions">
<%= f.submit  "Create task",   class:"btn btn-lg btn-primary btn-block"%>

</div>
 </div>

<% end %>
